<%- include('../partials/header') %>
    <%- include('../partials/navbar') %>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3>Cadastro de Produto</h3>
                </div>
                <div class="card-body">
                    <form action="/salvarproduto" method="post">
                        <label for="titulo">Nome:</label>
                        <input type="text" name="titulo" id="nomeProduto" placeholder="Digite um nome..."
                            class="form-control">

                        <label for="descricao">Descrição:</label>
                        <textarea name="descricao" id="descricaoproduto" cols="30" rows="10"
                            placeholder="Descreva o produto" class="form-control"></textarea>

                        <button class="btn-primary">Salvar</button>

                    </form>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>